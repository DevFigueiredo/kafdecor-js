{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    /* General Options */
    "target": "ES6",  /* Use a more common target like ES6 for broader compatibility */
    "module": "CommonJS", /* Standard module system for Node.js libraries */
    "rootDir": "./src", /* Define 'src' as the root for source files */
    "outDir": "./dist", /* Output compiled files to 'dist' */
    "baseUrl": "./", /* Allow non-relative imports based on the base directory */


    /* Emit Options */
    "declaration": true, /* Generate type declaration files (.d.ts) */
    "declarationMap": true, /* Enable source maps for declaration files */
    "sourceMap": true, /* Generate source maps for JavaScript files */
    "removeComments": true, /* Strip comments from emitted JavaScript files */
    "esModuleInterop": true, /* Enable compatibility with ES module imports */
    "strict": true, /* Enable all strict type checking options */
    "skipLibCheck": true, /* Skip checking types from node_modules */

    /* Decorators */
    "experimentalDecorators": true, /* Enable support for decorators */
    "emitDecoratorMetadata": true, /* Emit metadata for decorators */

    /* TypeScript Features */
    "allowJs": true, /* Allow JavaScript files to be processed */
    "resolveJsonModule": true, /* Allow imports from .json files */
    "forceConsistentCasingInFileNames": true, /* Enforce consistent file name casing */
    
    /* Type Checking */
    "strictNullChecks": true, /* Ensure null and undefined are handled explicitly */
    "noImplicitAny": true, /* Disallow variables with 'any' type unless explicitly defined */

  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
